page {
  height: 100%;
}
.cates_index {
  height: 100%;
}
.cates_index .cates_container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.cates_index .cates_container .left_menu {
  flex: 2;
}
.cates_index .cates_container .left_menu .menu_item {
  width: 100%;
  border-bottom: 1px solid #e5e5e5;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  background-color: #f3f4f5;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cates_index .cates_container .left_menu .active {
  color: #585c64;
  border-left: 10rpx solid #2276ff;
  background-color: #fff;
}
.cates_index .cates_container .right_content {
  flex: 5;
}
.cates_index .cates_container .right_content .goods_group .goods_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cates_index .cates_container .right_content .goods_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates_index .cates_container .right_content .goods_group .goods_title .title {
  font-size: 30rpx;
  margin-top: -30rpx;
}
.cates_index .cates_container .right_content .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates_index .cates_container .right_content .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.cates_index .cates_container .right_content .goods_group .goods_list navigator image {
  width: 50%;
}
.cates_index .cates_container .right_content .goods_group .goods_list navigator .goods_name {
  font-size: 30rpx;
}
