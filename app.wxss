/*全局样式文件*/

@import "./styles/iconfont.wxss";

page,view,text,swiper,swiper-item, image, navigator {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/*
    主题颜色，通过变量来实现
    less中 存在 变量这个知识
    原生的css和wxss也是支持变量的
*/
page{
    /*定义主题颜色*/
    --themeColor:#2276ff;
    /*
        定义统一字体大小  假如设计稿 大小是 375px
        1px = 2rpx
        14px = 28rpx
    */
}

image{
    width: 100%;
}